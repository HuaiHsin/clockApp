BoxLayout:
    orientation:'vertical'
    Label:
        text: '[b]00[/b]:00:00'
        markup: True #Kivy的BBCode需要将markup属性设置为True。
        id: time
    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            id: start_stop
            text: 'Start'
            on_press: app.start_stop()
            
        RobotoButton:
            id: reset
            text: 'Reset'
            on_press: app.reset()
    Label:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'
#减少重复代碼
<Label>: 
    font_name: 'Roboto'
    font_size: 60
    markup: True
<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    markup: True
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: (2, 2, 2, 2) #border属性与CSS一致是顺时针：上，右，下，左